{
	"rules": {
        "max-line-length": [true, 120],
		"indent": [
			true,
			"spaces",
			4
		],
		"quotemark": [
			true,
			"double"
		],
		"eofline": true,
		"arrow-parens": [
			true,
			"ban-single-arg-parens"
		],
		"arrow-return-shorthand": true,
        "linebreak-style": [true, "LF"],
        "no-trailing-whitespace": true,
        "ordered-imports": true,
        "whitespace": true,
        "no-consecutive-blank-lines": true,
        "jsdoc-format": true,
        "prefer-const": true
	}
}
